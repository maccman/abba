@import './mixins'

section.experiments {
  vbox()

  .list {
    box-flex: 1
  }

  pre {
    margin: 0
    overflow-x: auto
  }

  table tr {

    td.state {
      width: 10px;
      vertical-align: middle;
      & div {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        &.active {
          background-color: #82c82d;
        }
        &.inactive {
          background-color: #b90000;
        }
      }
    }


    .index {
      width: 20px
    }

    .name {
      width: 150px
    }

    .description {
      width: 400px
    }

    .actions {
      text-align: right
    }
  }
}
